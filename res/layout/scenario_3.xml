<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    >
    <ImageView android:id="@+id/scenario_imageview"
      android:layout_width="fill_parent"  
      android:layout_height="fill_parent"  
	  android:background="@drawable/scenario_3"    
	  android:contentDescription="@string/scenario_imageview_desc"
	/>    
    <ImageView android:id="@+id/scenario_flood_imageview"
      android:layout_width="fill_parent"  
      android:layout_height="fill_parent"  
	  android:background="@drawable/scenario_3_flood"    
	  android:contentDescription="@string/scenario_imageview_desc"
	  android:layout_alignBottom="@+id/scenario_imageview"
	/>    

	<ImageView
	    android:id="@+id/scenario_text_imageview"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_alignBottom="@+id/scenario_imageview"
	    android:background="@drawable/scenario_3_text"
	    android:contentDescription="@string/scenario_text_imageview_desc" />
        
	<Button
        android:id="@+id/hint_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hint_button"/>    	
    <Button
        android:id="@+id/navi_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navi_button"/>        	
</RelativeLayout>
